@model CreateWatchViewModel

@{
    ViewBag.Title = "Create Watch Entity";
}

<div class="login-register">
    <div class="login-register__container">
        <div class="login-register__header">
            <h3 class="login-register__title title_active">
                Create Watch Entity
            </h3>
        </div>
        <div class="login-register__froms">
            <form asp-controller="Watch" asp-action="CreateWatch" method="post" class="form">
                <div asp-validation-summary="ModelOnly"></div>
                <div class="form-group">
                    <label asp-for="Title" class="control-label"></label>
                    <div class="fake__form-input">
                        <input asp-for="Title" class="form-input">
                    </div>
                    <div class="error__message-block">
                        <span asp-validation-for="Title" class="form-span"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <div class="fake__form-input">
                        <input asp-for="Description" class="form-input">
                    </div>
                    <div class="error__message-block">
                        <span asp-validation-for="Description" class="form-span"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Diameter" class="control-label"></label>
                    <div class="fake__form-input">
                        <input asp-for="Diameter" class="form-input">
                    </div>
                    <div class="error__message-block">
                        <span asp-validation-for="Diameter" class="form-span"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Price" class="control-label"></label>
                    <div class="fake__form-input">
                        <input asp-for="Price" class="form-input">
                    </div>
                    <div class="error__message-block">
                        <span asp-validation-for="Price" class="form-span"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Gender" class="control-label"></label>
                    <div class="fake__form-input">
                        <select asp-for="Gender" asp-items="@Html.GetEnumSelectList<Gender>()"
                                class="select" style="width: 100%"></select>
                    </div>
                    <div class="error__message-block">
                        <span asp-validation-for="Gender" class="form-span"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="ManufacturerId" class="control-label"></label>
                    <div class="fake__form-input">
                        <select asp-for="ManufacturerId" asp-items="@Model.Manufacturers" class="select" style="width: 100%"></select>
                    </div>
                    <div class="error__message-block">
                        <span asp-validation-for="ManufacturerId" class="form-span"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="GlassMaterialId" class="control-label"></label>
                    <div class="fake__form-input">
                        <select asp-for="GlassMaterialId" asp-items="@Model.GlassMaterials" class="select" style="width: 100%"></select>
                    </div>
                    <div class="error__message-block">
                        <span asp-validation-for="GlassMaterialId" class="form-span"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="MechanismId" class="control-label"></label>
                    <div class="fake__form-input">
                        <select asp-for="MechanismId" asp-items="@Model.Mechanisms" class="select" style="width: 100%"></select>
                    </div>
                    <div class="error__message-block">
                        <span asp-validation-for="MechanismId" class="form-span"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="BodyMaterialId" class="control-label"></label>
                    <div class="fake__form-input">
                        <select asp-for="BodyMaterialId" asp-items="@Model.BodyMaterials" class="select" style="width: 100%"></select>
                    </div>
                    <div class="error__message-block">
                        <span asp-validation-for="BodyMaterialId" class="form-span"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="StrapId" class="control-label"></label>
                    <div class="fake__form-input">
                        <select asp-for="StrapId" asp-items="@Model.Straps" class="select" style="width: 100%"></select>
                    </div>
                    <div class="error__message-block">
                        <span asp-validation-for="StrapId" class="form-span"></span>
                    </div>
                </div>
                <div class="extended-group">
                    <input class="form-submit" type="submit" value="Create" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}