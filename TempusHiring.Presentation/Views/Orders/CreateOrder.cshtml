@model CreateOrderViewModel

@{
    ViewBag.Title = "Checkout";
}

<div class="login-register">
    <div class="login-register__container">
        <div class="login-register__header">
            <h3 class="login-register__title title_active">
                Checkout
            </h3>
        </div>
        <div class="login-register__froms">
            <form asp-controller="Orders" asp-action="CreateOrder" method="post" class="form">
                <div asp-validation-summary="ModelOnly"></div>
                <div class="form-group">
                    <label asp-for="Address" class="control-label"></label>
                    <div class="fake__form-input">
                        <input asp-for="Address" class="form-input">
                    </div>
                    <div class="error__message-block">
                        <span asp-validation-for="Address" class="form-span"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="PaymentMethod" class="control-label"></label>
                    <div class="fake__form-input">
                        <select asp-for="PaymentMethod" asp-items="@Html.GetEnumSelectList<PaymentMethod>()"
                                class="select" style="width: 100%"></select>
                    </div>
                    <div class="error__message-block">
                        <span asp-validation-for="PaymentMethod" class="form-span"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="PhoneNumber" class="control-label"></label>
                    <div class="fake__form-input">
                        <input asp-for="PhoneNumber" class="form-input">
                    </div>
                    <div class="error__message-block">
                        <span asp-validation-for="PhoneNumber" class="form-span"></span>
                    </div>
                </div>
                <div class="extended-group">
                    <input class="form-submit" type="submit" value="Create" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}