@model EditWristSizeViewModel

@{
    ViewBag.Title = "Edit Wrist Size Entity";
}

<div class="login-register">
    <div class="login-register__container">
        <div class="login-register__header">
            <h3 class="login-register__title title_active">
                Edit Wrist Size Entity
            </h3>
        </div>
        <div class="login-register__froms">
            <form asp-controller="WristSize" asp-action="EditWristSize" method="post" class="form">
                <div asp-validation-summary="ModelOnly"></div>
                <div class="form-group">
                    <input type="hidden" asp-for="Id" />
                    <label asp-for="Title" class="control-label"></label>
                    <div class="fake__form-input">
                        <input asp-for="Title" class="form-input">
                    </div>
                    <div class="error__message-block">
                        <span asp-validation-for="Title" class="form-span"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Size" class="control-label"></label>
                    <div class="fake__form-input">
                        <input asp-for="Size" class="form-input">
                    </div>
                    <div class="error__message-block">
                        <span asp-validation-for="Size" class="form-span"></span>
                    </div>
                </div>
                <div class="extended-group">
                    <input class="form-submit" type="submit" value="Edit" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}